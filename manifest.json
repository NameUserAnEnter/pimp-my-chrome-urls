{
	"manifest_version": 3,
	"name": "pimp-my-chrome-urls",
	"version": "1.0",
	"description": "Replaces default styles for chrome:// pages.",
	
	"content_scripts": [
		{
			"js": ["pimp-my-chrome-urls.js"],
			"matches": [
				"chrome://extensions/",
				"chrome://bookmarks/",
				"chrome://settings/",
				"chrome://flags/",
				"chrome://history/",
				"chrome://downloads/",
				"chrome://version/",
				"chrome://extensions/*",
				"chrome://bookmarks/*",
				"chrome://settings/*",
				"chrome://flags/*",
				"chrome://history/*",
				"chrome://downloads/*",
				"chrome://version/*"
			]
		}
	]
}
